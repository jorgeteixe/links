---
import '../styles/global.css';
import { Icon } from 'astro-icon/components';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Jorge Teixeira's Links" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 flex flex-col">
		<main class="container mx-auto px-4 flex-1 flex items-center justify-center">
			<slot />
		</main>
		<footer class="text-center text-sm text-gray-500 py-4">
			<div>Â© {new Date().getFullYear()} Jorge Teixeira. All rights reserved.</div>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
