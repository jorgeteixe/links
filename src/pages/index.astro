---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import { NAME, SUBTITLE, PROFILE_IMAGE, SOCIAL_LINKS, EVENTS } from '../data/constants';

const socialLinks = SOCIAL_LINKS;
---

<Layout>
	<div class="text-center space-y-6 max-w-2xl">
		<!-- Profile Section -->
		<div class="space-y-4">
			<img
				src={PROFILE_IMAGE}
				alt={NAME}
				class="w-40 h-40 rounded-[2rem] mx-auto shadow-lg border-4 border-white/50"
			/>
			<div class="space-y-1">
				<h1 class="text-3xl font-bold text-gray-800">{NAME}</h1>
				<p class="text-gray-600 text-lg max-w-xs mx-auto">{SUBTITLE}</p>
			</div>
		</div>

		<!-- Social Links -->
		<div class="flex justify-center gap-6">
			{socialLinks.map((link) => (
				<a
					href={link.url}
					target="_blank"
					rel="noopener noreferrer"
					class="text-gray-700 hover:text-gray-900 transition-colors"
					title={link.name}
				>
					<Icon name={link.icon} class="w-8 h-8" />
				</a>
			))}
		</div>

		<!-- Divider -->
		<div class="border-t border-gray-200 my-8"></div>

		<!-- Cards -->
		<div class="max-w-md mx-auto space-y-4">
			{EVENTS.map((event) => (
				<div class="p-4 bg-white/50 rounded-lg border border-solid border-indigo-200 text-center">
					<a href={event.url} target="_blank" rel="noopener noreferrer">
						<div class="flex items-center gap-4 text-left">
							<img
								src={event.image}
								alt={`${event.name} logo`}
								class={`h-20 w-20 object-contain rounded-md p-2 ${
									event.darkLogo ? 'bg-gray-800' : 'bg-transparent'
								}`}
							/>
							<div>
								<h2 class="text-xl font-semibold text-gray-800">{event.name}</h2>
								<p class="text-gray-600 text-sm md:text-base">{event.description}</p>
							</div>
						</div>
					</a>
				</div>
			))}
		</div>
	</div>
</Layout>
