---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import { NAME, SUBTITLE, PROFILE_IMAGE, SOCIAL_LINKS, COMING_SOON_TEXT } from '../data/constants';

const socialLinks = SOCIAL_LINKS;
---

<Layout>
	<div class="text-center space-y-6 max-w-2xl">
		<!-- Profile Section -->
		<div class="space-y-4">
			<img
				src={PROFILE_IMAGE}
				alt={NAME}
				class="w-40 h-40 rounded-[2rem] mx-auto shadow-lg border-4 border-white/50"
			/>
			<div class="space-y-1">
				<h1 class="text-3xl font-bold text-gray-800">{NAME}</h1>
				<p class="text-gray-600 text-lg max-w-xs mx-auto">{SUBTITLE}</p>
			</div>
		</div>

		<!-- Social Links -->
		<div class="flex justify-center gap-6">
			{socialLinks.map((link) => (
				<a
					href={link.url}
					target="_blank"
					rel="noopener noreferrer"
					class="text-gray-700 hover:text-gray-900 transition-colors"
					title={link.name}
				>
					<Icon name={link.icon} class="w-8 h-8" />
				</a>
			))}
		</div>

		<!-- Divider -->
		<div class="border-t border-gray-200 my-8"></div>

		<!-- Placeholder Cards -->
		<div class="space-y-4">
			<div class="p-4 bg-white/50 rounded-lg border-2 border-dashed border-gray-300 text-center">
				<p class="text-gray-400 italic">{COMING_SOON_TEXT}</p>
			</div>
			<div class="p-4 bg-white/50 rounded-lg border-2 border-dashed border-gray-300 text-center">
				<p class="text-gray-400 italic">{COMING_SOON_TEXT}</p>
			</div>
			<div class="p-4 bg-white/50 rounded-lg border-2 border-dashed border-gray-300 text-center">
				<p class="text-gray-400 italic">{COMING_SOON_TEXT}</p>
			</div>
		</div>
	</div>
</Layout>
